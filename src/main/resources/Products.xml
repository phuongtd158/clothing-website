<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="entity.Products">
        <table name="products" schema="assignment_java4" catalog=""/>
        <attributes>
            <id name="id">
                <column name="id" precision="11"/>
            </id>
            <basic name="productName">
                <column name="product_name"/>
            </basic>
            <basic name="status">
                <column name="status" precision="11"/>
            </basic>
            <one-to-many name="productDetailsById" mapped-by="productsByProductId"
                         target-entity="entity.ProductDetails"/>
        </attributes>
    </entity>
</entity-mappings>
