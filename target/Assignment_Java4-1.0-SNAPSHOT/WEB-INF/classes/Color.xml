<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="entity.Color">
        <table name="color" schema="assignment_java4" catalog=""/>
        <attributes>
            <id name="id">
                <column name="id" precision="11"/>
            </id>
            <basic name="colorName">
                <column name="color_name"/>
            </basic>
            <one-to-many name="productDetailsById" mapped-by="colorByColorId" target-entity="entity.ProductDetails"/>
        </attributes>
    </entity>
</entity-mappings>
